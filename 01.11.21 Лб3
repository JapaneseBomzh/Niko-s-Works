Bal=range(1,101)
import random
filename1 = "group1.txt"
filename2 = "group2.txt"
fd = open(filename1, "w") 
d=1
c=range(1,6)
for i in name1:
    u=i,d
    fd.write(str(u))
    fd.write("\n")
    c=range(1,6)
    d+=random.choice(c) 
fd.close()
fd = open(filename2, "w") 
for i in name2:
    u=i,random.choice(Bal) 
    fd.write(str(u))
    fd.write("\n")
fd.close()
#2)Читання і запис файлів
import csv 
import sys 
x=int(input("№Групи: "))
while x==1 or x==2:    
 try:
  if x ==1:
    filename = "group1.txt"
    y=input('Читати(r) чи Записати(w)[Off-Вихід]: ')
    if y=="r":
     fd = open(filename,"r") 
     print(fd.read())
     fd.close()
    elif y=="w":
     fd = open(filename,"a") 
     fd.write('\n')
     fd.write(input(">" )) 
     fd.close()
    elif y=="Off":
        break
    else:
     print("ошибка")
  elif x==2:
      filename = "group2.txt"
      y=input('Читати(r) чи Записати(w)[Off-Вихід]: ')
      if y=="r":
       fd = open(filename,"r") 
       print(fd.read())
       fd.close()
      elif y=="w":
       fd = open(filename,"a") 
       fd.write('\n')
       fd.write(input(">" )) 
       fd.close()
      elif y=="Off":
        break
      else:
        print("ошибка")
 except ValueError:
     print("Erorr")
